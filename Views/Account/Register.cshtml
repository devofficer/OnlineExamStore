@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    var reg_type = "@regType";
    var countX = 1;
    if (reg_type == "Paid") {
        countX = 3;
    }

    $(document).ready(function () {
        jQuery.validator.methods["date"] = function (value, element) { return true; }
        $(".datepicker").datepicker({
            dateformat: "dd/mm/yyyy"
        });

        $('#SelectedClasses').multiselect({
            nonSelectedText: 'Select Class',
            allSelectedText: 'All Selected',
            selectAllName: false,
            includeSelectAllOption: false,
            numberDisplayed: 1,
            numberSelectedOptions: 1,
            buttonWidth: '100%',
            maxHeight: 400,
            onChange: function (option, checked) {
                // Get selected options.
                var selectedOptions = jQuery('#SelectedClasses option:selected');

                if (selectedOptions.length >= countX) {
                    // Disable all other checkboxes.
                    var nonSelectedOptions = jQuery('#SelectedClasses option').filter(function () {
                        return !jQuery(this).is(':selected');
                    });

                    nonSelectedOptions.each(function () {
                        var input = jQuery('input[value="' + jQuery(this).val() + '"]');
                        input.prop('disabled', true);
                        input.parent('li').addClass('disabled');
                    });
                }
                else {
                    // Enable all checkboxes.
                    jQuery('#SelectedClasses option').each(function () {
                        var input = jQuery('input[value="' + jQuery(this).val() + '"]');
                        input.prop('disabled', false);
                        input.parent('li').addClass('disabled');
                    });
                }
            }
        });

    $("#UserType").change(function () {
        UnCheckAll();
        if ($(this).val() == "Teacher") {
            $("#SelectedClasses").val('');
            $("#SubjectCategories").val('');
             $("#classRow").css('display', '');
            $("#categoryRow").css('display', '');
            countX = 3;
        }
        else {
            $("#SelectedClasses").val('');
            $("#SubjectCategories").val('');
            $("#categoryRow").css('display', 'none');
            countX = 1;
        }
    });

    function UnCheckAll() {
        $("#SelectedClasses").multiselect('refresh');
        $('#SubjectCategories').html('');
    }
    var last_valid_class_selection = null;
    $("#SelectedClasses").on("change",function (event) {
        var strVal = "";
        strVal = $(this).val();
        if (strVal != null) {
            var strValArray = strVal.toString().split(",");
            if (strValArray.length > countX) {
                $(this).val(last_valid_class_selection);
            }
            else {
                last_valid_class_selection = $(this).val();
                var strclass = "";
                strclass = strVal.toString();
                if (strValArray.length > 1) {
                    strclass = strVal.toString().replaceAll(",", "|");
                }
                GetSubjectCategory(strclass);
            }
        }

    });

    function GetSubjectCategory(str) {
        $.getJSON('/Home/GetSubjectCategoryByClassTypes/', { classType: str },
            function (data) {
                var items = '';
                $.each(data, function (i, state) {
                    items += "<option value='" + state.Value + "'>" + state.Text + "</option>";
                });
                $('#SubjectCategories').html(items);
                $('#SubjectCategories').multiselect({
                    nonSelectedText: 'Select Subject Category',
                    allSelectedText: 'All Selected',
                    selectAllName: false,
                    includeSelectAllOption: false,
                    numberDisplayed: 1,
                    buttonWidth: '100%',
                    maxHeight: 400,
                    onChange: function (option, checked) {
                        // Get selected options.
                        var selectedOptions = jQuery('#SubjectCategories option:selected');

                        if (selectedOptions.length >= countX) {
                            // Disable all other checkboxes.
                            var nonSelectedOptions = jQuery('#SubjectCategories option').filter(function () {
                                return !jQuery(this).is(':selected');
                            });

                            nonSelectedOptions.each(function () {
                                var input = jQuery('input[value="' + jQuery(this).val() + '"]');
                                input.prop('disabled', true);
                                input.parent('li').addClass('disabled');
                            });
                        }
                        else {
                            // Enable all checkboxes.
                            jQuery('#SubjectCategories option').each(function () {
                                var input = jQuery('input[value="' + jQuery(this).val() + '"]');
                                input.prop('disabled', false);
                                input.parent('li').addClass('disabled');
                            });
                        }
                    }
                });
             }
        );

    }

    var last_valid_subject_selection = null;
    $("#SubjectCategories").on("change",function (event) {
        var strVal = "";
        strVal = $(this).val();
        if (strVal != null) {
            var strValArray = strVal.toString().split(",");

            if (strValArray.length > countX) {
                $(this).val(last_valid_subject_selection);
            }
            else {
                last_valid_subject_selection = $(this).val();
            }
        }

    });


