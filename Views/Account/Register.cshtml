@using OnlineExam.Helpers
@using OnlineExam.Utils
@model OnlineExam.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<style>
    .btn-group {
        margin-left: 0px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        jQuery.validator.methods["date"] = function (value, element) { return true; }
        $(".datepicker").datepicker({
            dateformat: "dd/mm/yyyy"
        });

        $('#SelectedClasses').multiselect({
            nonSelectedText: 'Select Class',
            allSelectedText: 'All Selected',
            selectAllName: true,
            includeSelectAllOption: true,
            numberDisplayed: 1,
            buttonWidth: '100%'
        });

        $('#SubjectCategories').multiselect({
            nonSelectedText: 'Select Category',
            allSelectedText: 'All Selected',
            selectAllName: true,
            includeSelectAllOption: true,
            numberDisplayed: 1,
            buttonWidth: '100%'
        });

        $("#footerDiv").hide();
        $('body').addClass('texture');
        //$("#UserType").on('change', function () {
        //    if (this.value == 'Teacher') {
        //        $("#SelectedClasses").multiselect();
        //    }
        //    else if (this.value == 'Student') {
        //        alert('Student');
        //        // $("#SelectedClasses").attr("multiple", "multiple");
        //        $("#SelectedClasses").multiselect({
        //            onChange: function (option, checked) {
        //                debugger;
        //                var selectedOptions = $('#SelectedClasses option:selected');
        //                if (selectedOptions.length >= 1) {
        //                    // Disable all other checkboxes.
        //                    var nonSelectedOptions = $('#SelectedClasses option').filter(function () {
        //                        return !$(this).is(':selected');
        //                    });
        //                }
        //            }
        //        });
        //    }
        //});

        $('#Email').blur(function () {
            var url = "/Account/CheckUserName";
            var name = $('#Email').val();
            if (name.length == 0) {
                $("#result").html("<span class='label-danger' style='color:white'>Please provide the email address to regsiter.</span>");
                return false;
            }
            $.get(url, { input: name }, function (data) {
                if (data == "Available") {
                    $("#result").html("<span class='label-success' style='color:white'>Available</span>");
                    $("#Email").css('border-color', 'green');
                } else {
                    $("#result").html("<span class='label-danger' style='color:white'>@AppConstants.EmailIsExistMessage</span>");
                    $("#Email").css('border-color', '#B94A48');
                    $("#Email").css('background-color', '#FFEEEE');
                }
            });
        });
    });

</script>
<div id="cl-wrapper" class="sign-up-container">
    <div class="middle-sign-up">
        <div class="block-flat">
            <div class="header"><h3 class="text-center"><img src="~/images/logo-icon.png" alt="logo" class="logo-img">ACADA Store</h3></div>
            <div>
                @*<form style="margin-bottom: 0px !important;" action="index.html" parsley-validate="" novalidate="" class="form-horizontal">*@
                @using (Html.BeginForm("Register", "Account", new { register = @Request.QueryString["register"] }, FormMethod.Post,
                     new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.RegisterType)
                    @Html.HiddenFor(x => x.ReferralCode)
                    @*@Html.HiddenFor(x => x.VoucherCode)*@
                    <div class="content">
                        @*<h5 class="title text-center"><strong>Sign Up</strong></h5>
                            <hr>*@
                        <span id="result"></span>
                        @*<div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <button type="button" class="btn btn-block btn-trans btn-facebook bg btn-rad"><i class="fa fa-facebook"></i> Sign in with Facebook</button>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <button type="button" class="btn btn-block btn-trans btn-twitter bg btn-rad"><i class="fa fa-twitter"></i> Sign in with Twitter</button>
                                </div>
                            </div>
                            <p class="text-center">Or</p>*@
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </div>
                        </div>
                        @if (Model.RegisterType == AppConstants.RegisterType.Paid)
                        {
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                                        @Html.TextBoxFor(x => x.VoucherCode, new { @class = "form-control", @placeholder = "Voucher Code" })
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users"></i></span>
                                    @Html.DropDownListFor(x => x.UserType, Model.UserTypes, "Select Role", new { @class = "form-control" })
                                </div>
                            </div>
                            <div id="classRow" class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-book" aria-hidden="true"></i></span>
                                    @Html.DropDownListFor(x => x.SelectedClasses, Model.ClasseTypes, new { @class = "form-control", multiple = "multiple" })
                                </div>
                            </div>
                            <div id="categoryRow" class="col-sm-12 col-xs-12 col-lg-6 col-md-6" style="display:none; position:absolute; left:230px;">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-book" aria-hidden="true"></i></span>
                                    @Html.DropDownListFor(x => x.SubjectCategories, Model.SubjectCategory, new { @class = "form-control", multiple = "multiple" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12 col-lg-6 col-md-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.ReferrerEmail, new { @class = "form-control", @placeholder = "Referral Email (Optional)" })
                                </div>
                            </div>
                        </div>
                        <p class="spacer">By creating an account, you agree with the <a href="#">Terms</a> and <a href="#">Conditions</a>.</p>
                        <button type="submit" class="btn btn-block btn-success btn-rad btn-lg">Sign Up</button>
                    </div>
                }
            </div>
        </div>
        <div class="text-center out-links"><a href="#">© @DateTime.Now.Year - ACADAStore.com</a></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $("#UserType").change(function () {
        UnCheckAll();
        if ($(this).val() == "Teacher") {
            $("#SelectedClasses").val('');
             $("#classRow").css('display', 'none');
            $("#categoryRow").css('display', '');
        }
        else {
            $("#SubjectCategories").val('');
            $("#categoryRow").css('display', 'none');
            $("#classRow").css('display', '');
        }
    });

    function UnCheckAll() {
        $("#SelectedClasses").multiselect('refresh');
        $("#SubjectCategories").multiselect('refresh');        
    }

    </script>
}

