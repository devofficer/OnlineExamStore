@model PagedList.IPagedList<OnlineExam.Models.ViewModels.BooksViewModel>
@using PagedList.Mvc

@{
    ViewBag.Title = "Books";
}

<link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
<style>
    #tblCustom thead {
        background-color: #2494F2 !important;
    }

        #tblCustom thead th {
            padding: 8px !important;
            line-height: 24px !important;
            vertical-align: middle;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #fff;
        }
</style>
<div class="page-head">
    <h3>Books</h3>
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Dashboard", "Account")</li>
        <li>
            <a href="@Url.Action("Index", "Books")" title="Books">Books</a>
        </li>
        <li class="active">List</li>
    </ol>
</div>
<div class="row">
    <div class="col-xs-12 packs-container">
        <table id="tblCustom" class="table table-condensed table-hover table-bordered table-responsive">
            <thead>
                <tr>
                    <th class="th-inner">Class Type</th>
                    <th class="th-inner">Title</th>
                    <th class="th-inner">Description</th>
                    <th class="th-inner">Last Modified</th>
                    <th class="th-inner"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClassType</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.ModifiedDate</td>
                        <td>
                            @if (ViewBag.IsAdmin == true)
                            {
                                <a href="/Books/Edit/@item.Id" class="btn btn-success btn-xs">Edit</a>
                                <a href="/Books/Delete/@item.Id" class="btn btn-danger btn-xs">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div id="contentPager">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", "Lessons",
        new { page, sortOrder = ViewBag.CurrentSort }))
        </div>
    </div>

</div>

