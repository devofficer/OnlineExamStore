@model PagedList.IPagedList<OnlineExam.Models.ViewModels.LessonItemsViewModel>
@using PagedList.Mvc

@{
    ViewBag.Title = "Lesson Materials";
}

<link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
<style>
    #tblCustom thead {
        background-color: #2494F2 !important;
    }

        #tblCustom thead th {
            padding: 8px !important;
            line-height: 24px !important;
            vertical-align: middle;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #fff;
        }
</style>
<div class="page-head">
    <h3>Lesson Materials - [@ViewBag.LessonTitle]</h3>
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Dashboard", "Account")</li>
        <li>
            <a href="@Url.Action("Index", "Lessons")" title="Lessons">Lessons</a>
        </li>
        <li class="active">Materials</li>
    </ol>
</div>
<div class="row">
    <div class="col-xs-12 packs-container">
        <table id="tblCustom" class="table table-condensed table-hover table-bordered table-responsive">
            <thead>
                <tr>
                    <th class="th-inner">Title</th>
                    <th class="th-inner">Created Date</th>
                    <th class="th-inner">Download</th>
                    <th class="th-inner">Is Active</th>
                    <th class="th-inner"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemTitle</td>
                        <td>@item.CreatedDate</td>
                        <td>@Html.Raw(item.DownloadLinks)</td>
                        <td>@item.IsActive</td>
                    </tr>
                }
            </tbody>
        </table>

        <div id="contentPager">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("LessonMaterials", "Lessons",
        new {id= ViewBag.LessonGuid, page, sortOrder = ViewBag.CurrentSort }))
        </div>
    </div>

</div>

