@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

<style>
    hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>
<div class="page-head">
    <h3>Delete Role</h3>
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Dashboard", "Account")</li>
        <li>
            <a href="@Url.Action("Index", "RolesAdmin")" title="Role List">Role List</a>
        </li>
        <li class="active">Edit Role</li>
    </ol>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="block-flat form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this Role? </h3>
                <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-1">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="col-md-2 form-inline">
                <button type="submit" name="command" value="Edit" class="btn btn-danger" title="Delete">
                    <span class="fa fa-trash-o"></span>
                </button>
                <a href="@Url.Action("Index", "RolesAdmin")" class="btn btn-primary" title="Back to List"><span class="fa fa-long-arrow-left"></span></a>
            </div>
        </div>
    </div>
}

