                                            &nbsp;
                                            <a ng-click="deleteBanner(banner)" title="Delete" class="label label-danger">
                                                <i class="glyphicon glyphicon-remove"></i>
                                                <span class="sr-only">Delete</span>
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}
