                                        <a ng-click="editEmployee(employee)" title="Edit" class="label label-success">
                                            <i class="fa fa-pencil-square-o"></i>
                                            <span class="sr-only">Edit</span>
                                        </a> &nbsp;
                                        <a ng-click="deleteEmployee(employee)" title="Delete" class="label label-danger">
                                            <i class="glyphicon glyphicon-remove"></i>
                                            <span class="sr-only">Delete</span>
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <hr />
                    </div>
                    <form name="formNews" novalidate ng-submit="AddNews()">
                        <div class="row">
                            <div class="col-md-12">
                                <p class="h3">Add News</p>
                            </div>
                        </div>
                        <div class="row">
                            <hr />
                        </div><div class="row">
                            <div class="col-md-4">
                                @Html.Label("School", new { @class = "col-md-3" })
                                <div class="col-md-9">
                                    <select id="schoolNews" name="schoolNews" ng-model="schoolNews" ng-init="GetSchools()" ng-change="GetSelectedNews()" style="width: 100%;" required class="form-control">
                                        <option value="" ng-selected="selected">Select School</option>
                                        <option ng-repeat="school in schools" value="{{school.Id}}">{{school.Name}}</option>
                                    </select>
                                    <span class="alert-danger" ng-show="submitted && formNews.schoolNews.$error.required">Required School</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @Html.Label("News Description", new { @class = "col-md-3" })
                                <div class="col-md-9">
                                    <textarea cols="40" rows="3" ng-model="newsDescription" name="Description" required class="form-control"></textarea>
                                    <span class="alert-danger" ng-show="submitted && formNews.newsDescription.$error.required">Required News</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-info">
                                        <i class="fa fa-plus"></i> Add News
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered table-responsive">
                                    <tr>
                                        <td>#</td>
                                        <td><strong>Description</strong></td>
                                        <td><strong>Is New</strong></td>
                                        <td><strong>Is Active</strong></td>
                                        <td><strong>Action</strong></td>
                                    </tr>
                                    <tr ng-repeat="news in schoolNewsData" ng-class="{'true':'success','false':'danger'}[news.IsActive]">
                                        <td class="col-md-1">{{$index + 1}}.</td>
                                        <td>
                                            {{news.Description}}
                                        </td>
                                        <td class="col-md-1">
                                            <input type="checkbox" ng-model="news.IsNew" ng-checked="news.IsNew" ng-click="editNews(news)" class="checkbox-inline">
                                        </td>
                                        <td class="col-md-1">
                                            <input type="checkbox" ng-model="news.IsActive" ng-checked="news.IsActive" ng-click="editNews(news)" class="checkbox-inline">
                                        </td>
                                        <td class="col-md-1">
                                            @*<a ng-click="editNews(news)" title="Edit" class="label label-success">
                                                    <i class="fa fa-pencil-square-o"></i>
                                                    <span class="sr-only">Edit</span>
                                                </a> &nbsp;*@

                                            <a ng-click="deleteNews(news)" title="Delete" class="label label-danger">
                                                <i class="glyphicon glyphicon-remove"></i>
                                                <span class="sr-only">Delete</span>
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </form>


