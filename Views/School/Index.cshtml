@if (!isSchoolView)
{

    <style>
        .btn {
            margin-left: 0px;
        }

        hr {
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .cl-mcont .row {
            margin-top: 5px;
        }

        .imgDiv {
            max-width: 140px;
            max-height: 50px;
        }
    </style>
    <div class="page-head">
        <h3>School Detail.</h3>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="active">School</li>
        </ol>
    </div>

    <div class="form-horizontal block-flat" ng-app="myApp">
        <div class="row">
            <div ng-controller="myCntrl" ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(OnlineExam.Helpers.CustomClaimsPrincipal.Current.IsACDAStoreUser))" class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <form name="formAdd" novalidate ng-submit="AddUpdateEmployee()">
                            <div>
                                {{Action}} School Detail
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        @Html.Label("Name", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            <input type="text" ng-model="employeeName" name="Name" required class="form-control" />
                                            <span class="alert-danger" ng-show="submitted && formAdd.Name.$error.required">Required Name</span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        @Html.Label("Url", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            <input type="url" ng-model="employeeUrl" name="Url" class="form-control" placeholder="http://www.google.com" />
                                            <span class="alert-danger" ng-show="submitted && formAdd.Url.$error.url">
                                                Please provide the valid url
                                            </span>
                                            @*<span class="alert-danger" ng-show="submitted && formAdd.Url.$error.required">Required Url</span>*@
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        @Html.Label("Address", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            @*<input type="text" ng-model="employeeAddress" name="Address" required class="form-control" />*@
                                            <textarea cols="40" rows="3" ng-model="employeeAddress" name="Address" required class="form-control"></textarea>
                                            <span class="alert-danger" ng-show="submitted && formAdd.Address.$error.required">Required Address</span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label("Contact Name", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            <input type="text" name="ContactName" ng-model="employeeContactName" required class="form-control" />

                                            <span class="alert-danger" ng-show="submitted && formAdd.ContactName.$error.required">Required Contact Name</span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        @Html.Label("State", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            <select id="state" name="state" ng-model="employeeState" ng-init="FillState()" ng-change="GetSelectedState()" style="width: 100%;" required class="form-control">
                                                <option value="" ng-selected="selected">Select State</option>
                                                <option ng-repeat="emp in emp" value="{{emp.id}}">{{emp.Name}}</option>
                                            </select>

                                            <span class="alert-danger" ng-show="submitted && formAdd.state.$error.required">Required State</span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-3"></div>
                                        <div class="col-md-9">
                                            <button type="submit" class="btn btn-success" ng-click="submitted=true">
                                                <i class="fa fa-save"></i> Save
                                            </button>
                                            <button type="button" class="btn btn-default" ng-click="CancelEmployee()">
                                                <i class="fa fa-refresh"></i> Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        @Html.Label("Logo", new { @class = "col-md-3" })
                                        <div class="col-md-7">
                                            @if (Request.IsAuthenticated && User.IsInRole(OnlineExam.Utils.AppConstants.Roles.StaffAdmin))
                                            {
                                                <img src="{{Logo}}" class="thumbnail imgDiv" />
                                                <input type="file" id="schoolFile" name="file" accept="image/*" onchange="angular.element(this).scope().selectFileforUpload(this.files)" />
                                            }
                                            else
                                            {
                                                <input type="file" id="schoolFile" name="file" accept="image/*" onchange="angular.element(this).scope().selectFileforUpload(this.files)" required />
                                                <span class="alert-danger" ng-show="(formAdd.file.$dirty || submitted) && formAdd.file.$error.required">Image required!</span>
                                            }
                                            <span class="alert-danger">{{FileInvalidMessage}}</span>

                                            @*<input type="file" ng-model="employeeLogo" name="Logo" class="btn btn-info" />*@
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label("Description", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            @*<input type="text" ng-model="employeeDescription" name="Description" required class="form-control" />*@
                                            <textarea cols="40" rows="3" ng-model="employeeDescription" name="Description" required class="form-control"></textarea>
                                            <span class="alert-danger" ng-show="submitted && formAdd.Description.$error.required">Required Description</span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label("Template Name", new { @class = "col-md-3" })
                                        <div class="col-md-9">
                                            <input type="text" ng-model="employeeTemplateName" name="TemplateName" required class="form-control" />
                                            <span class="alert-danger" ng-show="submitted && formAdd.TemplateName.$error.required">Required Template Name</span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label("Contact Phone", new { @class = "col-md-3" })
