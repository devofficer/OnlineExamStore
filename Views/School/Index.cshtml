                                            <span class="alert-danger" ng-show="((submitted && formAdd.$error.minlength || submitted && formAdd.$error.maxlength) && submitted && formAdd.$dirty) ">Phone number should be 10 digits</span>


                                            @*<span class="alert-danger" ng-show="submitted && formAdd.ContactPhone.$error.required">Required Contact Phone</span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label("City", new { @class = "col-md-3" })
                                        <div class="col-md-7">
                                            <select id="City" name="City" ng-model="employeeCity" required class="form-control">
                                                <option value="" ng-selected="selected">Select City</option>
                                                <option ng-repeat="em in citys" value="{{em.id}}" ng-selected="employeeCity==em.id">{{em.Name}}</option>
                                            </select>

                                            <span class="alert-danger" ng-show="submitted && formAdd.City.$error.required">Required City</span>
                                        </div>
                                    </div>
                                    @if (Request.IsAuthenticated && User.IsInRole(OnlineExam.Utils.AppConstants.Roles.StaffAdmin))
                                    {
                                        <div class="col-md-12">
                                            @Html.Label("Status", new { @class = "col-md-3" })
                                            <div class="col-md-7">
                                                <select id="Status" name="Status" ng-model="employeeStatus" ng-init="FillAction()" style="width: 100%;" required class="form-control">
                                                    <option value="" ng-selected="selected">Select Status</option>
                                                    <option ng-repeat="em in actions" value="{{em.id}}" ng-selected="employeeStatus==em.id">{{em.Name}}</option>
                                                </select>

                                                <span class="alert-danger" ng-show="submitted && formAdd.Status.$error.required">Required Status</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @if (Request.IsAuthenticated && User.IsInRole(OnlineExam.Utils.AppConstants.Roles.StaffAdmin))
                {
