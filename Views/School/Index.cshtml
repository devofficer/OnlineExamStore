                                    <td>
                                        {{employee.Url}}
                                    </td>
                                    <td>
                                        {{employee.TemplateName}}
                                    </td>

                                    <td class="col-md-3">
                                        {{employee.Address}}
                                    </td>
                                    <td>
                                        {{employee.ContactName}}
                                    </td>
                                    <td>
                                        {{employee.ContactPhone}}
                                    </td>
                                    <td>
                                        {{employee.City}}
                                    </td>
                                    <td>
                                        {{employee.State}}
                                    </td>
                                    <td>
                                        {{employee.Status}}
                                    </td>
