@using PagedList
@model OnlineExam.Models.QuestionPaperIndexViewModel
<div class="row">
    <div class="pull-left">
        <strong> Total Count:&nbsp;</strong><span class="label label-warning"> @Model.QuestionBankSearchViewModel.QuestionPaperList.ToPagedList(Model.QuestionBankSearchViewModel.PageIndex, Model.QuestionBankSearchViewModel.PageSize).TotalItemCount</span>
    </div>
</div>
<div class="row">
    <table id="tblQuestions" class="table table-condensed table-hover table-bordered table-responsive">
        <tr>
            <th style="width: 10%">
                #
            </th>
            <th>
                Question Details
            </th>
            <th style="width: 20%">
                Question Format
            </th>
        </tr>

        @foreach (var item in Model.QuestionBankSearchViewModel.QuestionPaperList.Select((x, i) => new { Data = x, Index = i + 1 }))
        {
            <tr>
                <td>
                    @item.Index<strong>.</strong>
                </td>
                <td>
                    @Html.CheckBoxFor(x => item.Data.IsSelected)
                    @Html.HiddenFor(x => item.Data.IsSelected)
                    @Html.Raw(item.Data.Decription)
                    @Html.HiddenFor(x => item.Data.Decription)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Data.QuestionFormat)
                    @Html.HiddenFor(x => item.Data.QuestionFormat)
                </td>
            </tr>
        }
    </table>
</div>
