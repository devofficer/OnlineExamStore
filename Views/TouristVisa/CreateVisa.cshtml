@using Microsoft.Web.Mvc.Html
@model v2.VisaOnline.Models.ViewModels.VisaApplicationViewModel
@using (Html.BeginForm("CreateVisa", "TouristVisa", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="cl-mcont">
        <div class="form-horizontal  block-flat">
            <h4>VisaApplicationViewModel</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.LotReferenceNo, new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @*@Html.DisplayFor(model => model.LotReferenceNo, new { @class = "control-label col-md-4" })*@
                        <label class="control-label">@Model.LotReferenceNo</label>
                        @Html.HiddenFor(model => model.LotReferenceNo)
                    </div>
                </div>

                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.VisaApplicationType, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EnumDropDownListFor(model => model.VisaApplicationType, "Select", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.VisaApplicationType)*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.VisitFromDate, new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.VisitFromDate, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.VisitFromDate)*@
                    </div>
                </div>

                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.VisitToDate, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.VisitToDate, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.VisitToDate)*@
                    </div>
                </div>
            </div>

            <div class="row">
                <table class="table table-striped table-hover">
                    <tr>
                        <td>
                            @Html.DisplayName("Include")
                        </td>
                        <td>
                            @Html.DisplayName("Task Description")
                        </td>
                        <td>
                            <input type="submit" name="Action:AddTask" value="Add" class="btn btn-primary btn-sm" />
                        </td>
                    </tr>
                    @*@Html.EditorFor(model=>model.TouristVisaApplications)*@
                </table>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EnumDropDownListFor(model => model.Location, "Select", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Location)*@
                    </div>
                </div>

                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.VisaStream, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EnumDropDownListFor(model => model.VisaStream, "Select", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.VisaStream)*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.PurposeOfVisa, new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.PurposeOfVisa, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.PurposeOfVisa)*@
                    </div>
                </div>

                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.IsMultiEntry, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.IsMultiEntry, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.IsMultiEntry)*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.PaymentMethod, new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EnumDropDownListFor(model => model.PaymentMethod, "Select", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.PaymentMethod)*@
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

