<style>
    .btn {
        margin-left: 0px;
    }
</style>
<div class="cl-mcont">
    <div class="block-flat">
        <h4>Forgot Password Confirmation.</h4>
        <hr />
        <div class="row">
            <div class="form-group">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Email))
                    {
                        if (Convert.ToBoolean(ViewBag.IsEmailSent))
                        {
                            <div class="alert alert-success  alert-dismissable">
                                <i class="glyphicon glyphicon-ok-sign"></i>&nbsp; <b> @ViewBag.Email</b>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger  alert-dismissable">
                                <i class="glyphicon glyphicon-ok-sign"></i>&nbsp; <b> @ViewBag.Email</b>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning alert-dismissable">
                            <i class="glyphicon glyphicon-off"></i> <b> @ViewBag.UserDoesNotExists</b>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <button class="btn btn-primary" value="Resend" onclick="location.href = '@Url.Action("ForgotPassword", "Account")'">
                        <span class="glyphicon glyphicon-envelope"></span> Resend
                    </button>
                    <button class="btn btn-default" value="Back" onclick="location.href = '@Url.Action(!string.IsNullOrWhiteSpace(ViewBag.Email) ? "Login" : "ForgotPassword", "Account")'">
                        <span class="sr-only"></span> Back To Login
                    </button>
                </div>
            </div>
        </div>
        <p>
            &nbsp;
        </p>
        @*<p class="text-danger">
                For DEMO only: You can click this link to reset password: <a href="@ViewBag.Link">link</a>
                Please change this code to register an email service in IdentityConfig to send an email.
            </p>*@

    </div>
</div>