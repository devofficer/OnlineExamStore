@model OnlineExam.Models.ReceiptModelView
<div class="cl-mcont">
    @using (Html.BeginForm("Receipt", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.InvoiceId)
        @Html.HiddenFor(model => model.CompanyId)
        @Html.HiddenFor(model => model.InvoiceCode)

        <div class="form-horizontal block-flat">
            <div class="col-sm-4">
                <h4>COMPANY RECEIPT</h4>
            </div>
            <div class="col-sm-offset-11">
                @Html.ActionLink("Back to List", "Index")
            </div>

            <hr />
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="form-control alert-info">
                    @Model.Message
                </div>
            }

            @Html.ValidationSummary(true)

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.InvoiceCode, new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.InvoiceCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.InvoiceCode)
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.CompanyName, new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.CompanyName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CompanyName)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.TotalAmount, new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.TotalAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TotalAmount)
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.CompanyAddress, new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.CompanyAddress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CompanyAddress)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ModeOfPayment, new { @class = "control-label col-md-4" })
                    <div class="col-md-3">
                        @Html.EnumDropDownListFor(model => model.ModeOfPayment, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ModeOfPayment)
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ReceivedAmount, new { @class = "control-label col-md-4" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.ReceivedAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReceivedAmount)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.BankName, new { @class = "control-label col-md-4" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.BankName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BankName)
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ChequeNo, new { @class = "control-label col-md-4" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.ChequeNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ChequeNo)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.ChequeDate, new { @class = "control-label col-md-4" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.ChequeDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ChequeDate)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="col-md-4"></div>
                    <div class="col-md-5">
                        @if (!Model.IsReceiptAlreadyCreated)
                        {
                            <input type="submit" value="Create" class="btn btn-success" />
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>