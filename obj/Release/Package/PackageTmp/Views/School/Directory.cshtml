@model List<OnlineExam.Models.School>
<style>
    .well {
        margin: 5px;
    }

    .imgDiv {
        max-width: 140px !important;
        max-height: 50px;
        padding-top: 5px;
    }

    .schoolBox {
        max-width: 140px;
        max-height: 50px;
    }

    /* centered columns styles */
    .row-centered {
        text-align: center;
    }

    .col-centered {
        display: inline-block;
        float: none;
        /* reset the text-align */
        text-align: left;
        /* inline-block space fix */
        margin-right: -4px;
    }

    .col-fixed {
        /* custom width */
        width: 320px;
    }

    .col-min {
        /* custom min width */
        min-width: 320px;
    }

    .col-max {
        /* custom max width */
        max-width: 320px;
    }

    .tile {
        display: block;
        cursor: pointer;
        -webkit-perspective: 0;
        -webkit-transform-style: preserve-3d;
        -webkit-transition: -webkit-transform .2s;
        float: left;
        min-width: 75px;
        min-height: 75px;
        text-align: center;
        opacity: .75;
        /*background-color: #2e8bcc;*/
        z-index: 1;
        border: 1px solid #F3E917;
        color: #fff;
    }

        .tile.tile-orange {
            background-color: #f39c12;
        }

        .tile.tile-wide, .tile.tile-double {
            height: 150px;
            width: 310px;
        }

        .tile.tile-medium {
            /*height: 150px;
            width: 150px;*/
            height: 100px;
            width: 175px;
        }

    .thumbnail {
        border-radius: 0px;
    }
</style>
<div class="page-head">
    <div class="row">
        <div class="col-md-6">
            <h3>School Directory</h3>
        </div>
        <div class="col-md-6 text-right">
           <h3> @Html.ActionLink("Register School?", "Index")</h3>
        </div>
    </div>
</div>
<div class="block-flat form-horizontal">

    @for (int RowCount = 0; RowCount < Model.Count; RowCount++)
    {
        <div class="row">
            @for (int colCount = RowCount; colCount < (Model.Count < (RowCount + 5) ? Model.Count : RowCount + 5); colCount++)
            {
                <div class="col-sm-2 col-md-2">
                    <div class="thumbnail tile tile-medium">
                        @if (string.IsNullOrWhiteSpace(@Model[colCount].Logo))
                        {
                            <a href="@Url.Action("Index", "School", new {id= @Model[colCount].Id })">
                                <i class="fa-3x fa-building"></i>
                                <div style="padding: 5px;">
                                    <strong> @Model[colCount].Name</strong>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "School", new {id= @Model[colCount].Id })">
                                <img src="@Model[colCount].Logo" class="imgDiv" />
                                <div style="padding: 5px;">
                                    <strong> @Model[colCount].Name</strong>
                                </div>
                            </a>
                        }
                    </div>
                </div>
                        RowCount++;
            }
        </div>
    }
</div>